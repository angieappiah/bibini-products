<h3><%= current_user.username %> create a new product!</h3>

<% if @product.errors.any? %>
  <div id="error">
    <h2><%= @product.errors.count %> error(s) prohibited new product creation:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <form action='/products' method="post">
    <p><label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= @product.title %>"><br><br>

    <label for="description">Enter a few sentences that describe your product:</label><br>
    <textarea id="description" name="description" rows="10" cols="40" ><%= @product.description %></textarea><br><br>

    <label for="price">Price:</label> $
    <input type="text" id="price" name="price" placeholder="x.xx" value="<%= @product.price %>"><br><br>

    <label for="image">Link to Image:</label><br>
    <input type="text" id="image" name="image" size="47" value="<%= @product.image %>"><br><br>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  
<p class="center"><a href="/products">Browse All products</a> || <a href='/'>Main Page</a></p>
